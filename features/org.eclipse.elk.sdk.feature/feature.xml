      <import plugin="org.eclipse.core.runtime" version="3.6.0" match="greaterOrEqual"/>
      <import plugin="org.apache.log4j"/>
      <import plugin="org.eclipse.emf.ecore" version="2.5.0" match="greaterOrEqual"/>
      <import feature="org.eclipse.elk.feature" version="0.0.0.qualifier"/>
      <import feature="org.eclipse.elk.feature.source" version="0.0.0.qualifier"/>
      <import feature="org.eclipse.elk.sdk.feature.source" version="0.0.0.qualifier"/>
   </requires>

